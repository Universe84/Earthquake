<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_earthquakeItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_itemEarthquake_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="4.8"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemEarthquake_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="42 km NS of Pen Pineapple, Apple Pen"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_itemEarthquake_magnitude"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_itemEarthquake_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Jan 21, 2026, 04:07:06 AM"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_itemEarthquake_magnitude"
        app:layout_constraintTop_toBottomOf="@+id/textView_itemEarthquake_location" />
</androidx.constraintlayout.widget.ConstraintLayout>